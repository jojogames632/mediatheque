{% extends "registrant/index.html.twig" %}

{% block title %}Inscrit - page d'accueil{% endblock %}

{% block stylesheets %}
	{{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/registrant/catalog.css') }}" />
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('js/books.js') }}"></script>
{% endblock %}

{% block body %}
	<div class="container-fluid p-0">

		{# mobile navigation (toggle on) #}
		<div class="w-100 p-3 d-none justify-content-between align-items-center mobileHeader" id="mobileHeaderOn">
			<span class="text-white mobileProfilTitle ml-3">Compte inscrit</span>
			<span class="text-white closeBtn mr-3" onClick="toggleHeader()">X</span>
			<div id="navigationBackground">
				<div class="d-flex flex-column justify-content-center align-items-center navContainer">
					<a href="#" class="text-warning mb-5">Découvrir le catalogue</a>
					<a href="{{ path('my_borrowed_books') }}" class="text-white">Emprunts en cours</a>
					<a href="{{ path('app_logout') }}" class="text-white mt-5">Se déconnecter</a>
				</div>
			</div>
		</div>

		{# mobile navigation (toggle off) #}
		<div class="w-100 p-3 justify-content-between align-items-center mobileHeader" id="mobileHeaderOff">
			<span class="text-white mobileProfilTitle ml-3">Compte inscrit</span>
			<svg 
				xmlns="http://www.w3.org/2000/svg" 
				width="40" 
				height="40" 
				fill="currentColor" 
				class="bi bi-list text-white mr-3"
				id="burgerBtn" 
				viewBox="0 0 16 16"
				onClick="toggleHeader()"
			>
				<path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
			</svg>
		</div>

		{# desktop navigation #}
		<div class="row">
			<div class="col-2 flex-column align-items-center" id="desktopProfil">
				<span class="mb-5 text-white desktopProfilTitle mt-4">Compte inscrit</span>
				<a href="#" class="w-100 btn btn-warning mb-2" id="activeLink">Découvrir le catalogue</a>
				<a href="{{ path('my_borrowed_books') }}" class="w-100 btn btn-outline-warning text-white">Emprunts en cours</a>
				<a href="{{ path('app_logout') }}" class="w-100 btn btn-outline-warning text-white" id="logoutBtn">Se déconnecter</a>
			</div>
		</div>
		
		{# Search zone #}
		<div class="w-100 d-flex justify-content-center mt-3">
			<input type="search" class="mt-3 text-center" id="searchInput" placeholder="Rechercher par titre" />
		</div>

		{# Filter zone #}
		<div class="row row-cols-2 text-center mt-5">
			<div class="col">
				<span class="genre">Développement personnel</span>
			</div>
			<div class="col">
				<span class="genre">Psychologie</span>
			</div>
			<div class="col">
				<span class="genre">Business</span>
			</div>
			<div class="col">
				<span class="genre">Spiritualité</span>
			</div>
			<div class="col">
				<span class="genre">Productivité</span>
			</div>
			<div class="col">
				<span class="genre">Alimentation</span>
			</div>
		</div>

		<hr class="mt-4 mb-5" />

		{# Main #}
		<main>
			{% include 'registrant/_booksContent.html.twig' %}
		</main>

	</div>
{% endblock %}